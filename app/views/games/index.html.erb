<h1>Listing games</h1>

<table>
  <tr>
    <th>Player1</th>
    <th>Player2</th>
    <th>P1 correct</th>
    <th>P2 correct</th>
    <th>P1 time</th>
    <th>P2 time</th>
    <th>Result</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%= game.player1_id %></td>
    <td><%= game.player2_id %></td>
    <td><%= game.p1_correct %></td>
    <td><%= game.p2_correct %></td>
    <td><%= game.p1_time %></td>
    <td><%= game.p2_time %></td>
    <td><%= game.result %></td>
    <td><%= link_to 'Show', game %></td>
    <td><%= link_to 'Edit', edit_game_path(game) %></td>
    <td><%= link_to 'Destroy', game, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

